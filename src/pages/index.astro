<style is:global>
	.trans_right{
		transform: translateX(-100%) !important; 
	}
	.trans_left{
		transform: translateX(100%) !important;
	}
	.slide-1,.slide-2{
		transition: all 0.6s ease-in-out;
	}

</style>

