---
import Layout from '../layouts/Layout.astro';
// import Card from '../components/Card.astro';
// import { Image } from 'astro:assets';
// import project from '../../public/project.jpg';
import right_arrow from '../../public/images/right_arrow.png'
import slide_1 from '../../public/images/slider_1.png'
import arrow_top from '../../public/images/vector_top.png'
import arrow_bottom from '../../public/images/vector_bottom.png'
import drum from '../../public/images/drum.png'

---

<Layout title="Mignesh Global">
	<main>
		
		<!-- slider section  -->
		<section class="slider bg-[#D9D9D9] w-screen h-[701px] relative">
			<div class="slide-1 bg-[url(../../public/images/slider_1.png)] bg-no-repeat bg-right w-full h-full text-center md:text-left">
				<!-- slider caption -->
				<div class="caption pt-[70px] w-[90%] sm:w-auto sm:max-w-lg md:max-w-2xl lg:max-w-4xl xl:max-w-6xl 2xl:max-w-7xl m-auto relative z-[1]">
					<h2 class="text-[40px] leading-[48px] text-[#48389C] uppercase md:w-[386px] ">
						<span class="normal-case">
							Welcome to 
						</span>
						<b class="text-5xl">Mignesh</b> Global!
					</h2>
					<p class="text-lg  leading-6 md:w-[414px] text-white md:text-[#2C2C2C] my-5 ">
						Your one-stop platform to purchase high-quality Infrasture & Lubricant products such as Bitumen, Emulsion, Base Oil, Furnace Oil, etc.
					</p>
					<button class="text-base flex justify-evenly h-11  w-[209px] items-center bg-[#E98135] rounded-[5px] text-white m-auto md:m-0">
						<span>
							CHECK PRODUCTS
						</span>
						<img src={right_arrow.src} alt=">">
					</button>
 				</div>


				<div class="arrow_bottom absolute hidden xl:block top-0 right-[187px]">
					<img src={arrow_bottom.src} alt="arrow_top">
				</div>
				
				<div class="arrow_top absolute hidden xl:block bottom-0 right-[810px]">
					<img src={arrow_top.src} alt="arrow_bottom">
				</div>

				<div class="drum my-5 2xl:absolute bottom-20 w-[90%] sm:w-[full] sm:max-w-lg md:max-w-2xl lg:max-w-4xl m-auto xl:w-auto  xl:left-[620px]">
					<div class="m-auto w-fit md:float-right 2xl:float-none max-w-none ">
						<img src={drum.src} alt="">
					</div>
				</div>

			</div>

			<!-- buttons  -->
			<div class="slider_btns flex md:flex-col gap-3 absolute bottom-4 left-[0%] justify-center right-[0%] md:bottom-[45%] md:left-[35px]">
				<button class="1 w-[30px] h-[5px] md:w-[5px] md:h-[30px] rounded-[3px] bg-[#E98135]"></button>
				<button class="2 w-[30px] h-[5px] md:w-[5px] md:h-[30px] rounded-[3px] bg-slate-600 md:bg-[#2E2C7033]"></button>
				<button class="3 w-[30px] h-[5px] md:w-[5px] md:h-[30px] rounded-[3px] bg-slate-600 md:bg-[#2E2C7033]"></button>
			</div>
		</section>
		


	</main>
</Layout>

